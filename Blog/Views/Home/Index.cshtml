<div class="wrap-comments">
    <h2>Comments</h2>
    <ul class="list-comment">
        @if (Model.Comments != null)
        {
            foreach (string item in Model.Comments)
            {
                <li>
                    <div class="avatar"><img src="~/Content/images/avatar-comment.png" alt="" /></div>
                    <div class="comment-text">
                        <a href="#"></a>
                        <p class="date"><span>@DateTime.Now.Date.ToString("D")</span><span>@DateTime.Now.Date.ToString("HH:mm")</span></p>
                        <p>@item</p>
                    </div>
                </li>
            }
        }
    </ul>
    @Html.Partial("AddComments", new AddCommentModel() { User = new UserModel() }, new ViewDataDictionary())
</div>

