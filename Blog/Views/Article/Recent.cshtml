@{
    Layout = null;
}
@using Blog.Models
@model RecentPostsModel
 
<div class="posts-wrap">
    <h3>Последние статьи</h3>
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>
                <p class="date">@item.Date.ToString("D")</p>
                <h2><p> @Html.ActionLink(@item.Text, "Index", "Home", new { titel = @item.URL }, null)</p></h2>
                @if (@HttpContext.Current.User.Identity.Name == "Admin")
                {
                    <form action="@Url.Action("DelPost", "Home", new { Name = @item.URL })" method="post">
                        <div id="comment_form">
                            <input type="submit" name="Submit" value=" Удалить " class="submit_btn" />
                        </div>
                    </form>
                }
            </li>
        }
    </ul>
</div>